<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Login">

    <ImageView
        android:id="@+id/logoLensa"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@id/titlelogin"
        android:layout_centerInParent="true"
        android:src="@drawable/manten_vector"
        android:background="@drawable/bg_loginbutton"/>

    <TextView
        android:id="@+id/titlelogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Booking Foto"
        android:textAlignment="center"
        android:textColor="@color/brownsoft1"
        android:textSize="25dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_loginbutton"
        android:outlineAmbientShadowColor="@color/brownsoft1"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="20dp"
        >

        <ImageView
            android:id="@+id/logoGoogle"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/google"
            android:layout_centerVertical="true"
            android:layout_marginVertical="5dp"
            />

        <TextView
            android:id="@+id/Signgoogle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In With Google"
            android:textColor="@color/brownsoft1"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/logoGoogle"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</RelativeLayout>